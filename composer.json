{
    "name": "hardai/think-captcha",
    "description": "captcha package for thinkphp8，前后端分离，api接口调用",
    "authors": [
        {
            "name": "hardai",
            "email": "2066362155@qq.com"
        }
    ],
    "license": "Apache-2.0",
    "require": {
		"php": ">=8.0.0",
        "topthink/framework": "^8.0.0"
    },
    "autoload": {
        "psr-4": {
            "hardai\\captcha\\": "src/"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "extra": {
        "think": {
            "services": [
                "hardai\\captcha\\CaptchaService"
            ],
            "config":{
                "captcha": "src/config.php"
            }
        }
    }
}